package corejava;

import java.io.*;
	 
 class ReversePy {
	    public static void main(String[] args)
	    {
	        int r = 1, c = 0, n = 8;
	    
	        // condition is false. if it is true then enter in
	        // to loop and execute the statements
	        while (r <= n) {
	            while (c <= r - 1) {
	                // printing the required pattern
	                System.out.print("* ");
	                c++;
	            }
	            r++;
	            c = 0;
}
	     // new line after each row
            System.out.println();
        }
    }
